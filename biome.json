{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 80,
			"quoteStyle": "single",
			"trailingComma": "all",
			"arrowParentheses": "always",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
